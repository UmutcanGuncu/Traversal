
<div class="leave-comment-form mt-5" id="reply">
    <h4 class="side-title mb-2">Yorum Bırak</h4>
    <p class="mb-4">
        İşaretli Alanlar Doldurulmak Zorundadır *
    </p>
    <form method="post" asp-action="AddComment" asp-controller="Comment">

        <div class="form-group">
            <textarea name="CommentText" class="form-control" placeholder="Yorumunuz*" required=""
                      spellcheck="false"></textarea>
        </div>
        <div class="input-grids row"> 

            <div class="form-group col-lg-6">
                <input type="text" name="Name" class="form-control" placeholder="İsminiz*"
                       required="">
            </div>
            <div class="form-group col-lg-6">
                <input type="hidden" name="DestinationId" class="form-control" value="@ViewBag.Id">
                <input type="hidden" name="AppUserId" class="form-control" value="@ViewBag.UserId" />
            </div>
            
        </div>
        User Id= @ViewBag.UserId
        Destination Id= @ViewBag.Id
        <div class="submit text-right">
            <button class="btn btn-style btn-primary">Yorumu Gönder </button>
        </div>
    </form>
</div>
