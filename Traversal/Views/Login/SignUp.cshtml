@{
    Layout = null;
}
@model Traversal.Models.UserRegisterModel
<!DOCTYPE html>
<html lang="zxx">

<head>
    <title>Traversal Login Panel</title>
    <!-- Meta tag Keywords -->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta charset="UTF-8" />

    <script>
        addEventListener("load", function () {
            setTimeout(hideURLbar, 0);
        }, false);

        function hideURLbar() {
            window.scrollTo(0, 1);
        }
    </script>
    <!-- //Meta tag Keywords -->
    <!--/Style-CSS -->
    <link rel="stylesheet" href="~/web/css/style.css" type="text/css" media="all" />
    <!--//Style-CSS -->
</head>

<body>
    <!-- /login-section -->
    <section class="w3l-login-6">
        <div class="login-hny">
            <div class="form-content">
                <div class="form-right">
                    <div class="overlay">
                        <div class="grid-info-form">
                            <h5></h5>
                            <h3>Hesap Oluşturun </h3>
                            <p>
                                Yeni Tur Rotaları Keşfetmek İçin Bize Katılın
                                Hesabınız Var Mı? Alttaki Butona Basarak Giriş Yap Sayfasına Ulaşabilirsiniz
                            </p>
                            <a href="/Login/SignIn" class="read-more-1 btn">Giriş Yap</a>
                        </div>

                    </div>
                </div>
                <div class="form-left">
                    <div class="middle">
                        <h4>Bize Katılın</h4>
                        <p>Ücretsiz Hesap Oluşturun</p>
                    </div>
                    <form method="post" class="signin-form">
                        <div class="form-input">
                            <label>Ad</label>
                            <input type="text" asp-for="Name"  />
                            <span asp-validation-for="Name"></span>
                        </div>
                        <div class="form-input">
                            <label>Soyad</label>
                            <input type="text"  asp-for="Surname" />
                            <span asp-validation-for="Surname"></span>
                        </div>
                        <div class="form-input">
                            <label>Kullanıcı Adı</label>
                            <input type="text" asp-for="Username" />
                            <span asp-validation-for="Username"></span>
                        </div>
                        <div class="form-input">
                            <label>Email</label>
                            <input type="email" asp-for="Email" />
                            <span asp-validation-for="Email"></span>
                        </div>
                        <div class="form-input">
                            <label>Password</label>
                            <input type="password"  asp-for="Password"/>
                            <span asp-validation-for="Password"></span>
                        </div>
                        <div class="form-input">
                            <label>Şifre Tekrarı</label>
                            <input type="password" asp-for="ConfirmPassword" />
                            <span asp-validation-for="ConfirmPassword"></span>
                        </div>

                        <div asp-validation-summary="ModelOnly">

                        </div>
                        <button class="btn">Hesap Oluştur</button>
                    </form>

                </div>

            </div>

        </div>
    </section>
    <!-- //login-section -->
</body>

</html>