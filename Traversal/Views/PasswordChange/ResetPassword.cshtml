<div class="container">
    <div class="row">
        <div class="col-md-8 mx-auto">
            <h2>Şifre Yenileme Sayfası</h2>
            <form method="post">
                <label>Şifrenizi Giriniz</label>
                <input type="password" class="form-control" asp-for="NewPassword" />
                <span asp-validation-for="NewPassword"></span>
                <br />
                <label>Şifrenizi Tekrar Giriniz</label>
                <input type="password" class="form-control" asp-for="ConfirmPassword" />
                <span asp-validation-for="ConfirmPassword"></span>
                <br />
                <button class="btn btn-outline-primary">Şifre Yenile</button>
            </form>
        </div>
    </div>
</div>
