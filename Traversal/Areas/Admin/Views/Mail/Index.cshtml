@model Traversal.Areas.Admin.Models.MailRequest
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<h1>Mail Gönderme Sayfası</h1>
<form method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label> Alıcı Mail Adresi</label>
        <input type="text" class="form-control" asp-for="ReceiverMail" />
    </div>
    <div class="form-group">
        <label> Konu</label>
        <input type="text" class="form-control" asp-for="Subject" />
    </div>
    <div class="form-group">
        <label> İçerik</label>
        <textarea cols="40" rows="6" class="form-control" asp-for="Body"></textarea>
    </div>

    <button class="btn btn-outline-success">Mail Gönder</button>
</form>