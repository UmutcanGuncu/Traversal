@model List<AppUser>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<h1>Kullanıcı Listesi</h1>
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Ad Soyad</th>
        <th>Kullanıcı Adı</th>
        <th>Mail</th>
        <th>Sil</th>
        <th>Düzenle</th>
        <th>Yorumlar</th>
        <th>Tur Geçmişi</th>
        <th>Kullanıcıya Rol Ata</th>
    </tr>
    @foreach(var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Name @item.Surname</td>
            <td>@item.UserName</td>
            <td>@item.Email</td>
            <td><a href="DeleteUser/@item.Id" class="btn btn-outline-danger">Sil</a></td>
            <td><a href="UpdateUser/@item.Id" class="btn btn-outline-primary">Düzenle</a></td>
            <td><a href="CommentUser/@item.Id" class="btn btn-outline-secondary">Yorumlar</a></td>
            <td><a href="ReservationUser/@item.Id" class="btn btn-outline-info">Tur Geçmişi</a></td>
            <td><a href="/Admin/Role/AssignRole/@item.Id" class="btn btn-outline-warning">Rol Ata</a></td>
        </tr>
    }
</table>
<a href="/Login/SignUp"class="btn btn-outline-success">Yeni Kullanıcı Kaydı</a>