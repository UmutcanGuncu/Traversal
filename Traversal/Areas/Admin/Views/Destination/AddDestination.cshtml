@model EntityLayer.Entityies.Destination
@{
    ViewData["Title"] = "AddDestination";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h4>Yeni Rota Ekleme Sayfası</h4>
<div class="form-group">
    <form method="post" >
    <div class="form-group">
        <label class="form-group">Şehir</label>
        <input type="text" asp-for="City" class="form-control">
    </div>
    <div class="form-group">
        <label>Gün Sayısı</label>
            <input type="text" asp-for="DayNight" class="form-control" />
    </div>
    <div class="form-group">
        <label>Açıklama</label>
            <input type="text" asp-for="Description" class="form-control" />
    </div>
    <div class="form-group">
        <label>Fiyat</label>
            <input type="text" asp-for="Price" class="form-control" />
    </div>
    <div class="form-group">
        <label>Ana Görsel</label>
            <input type="text" asp-for="Image" class="form-control" />
    </div>
    <div class="form-group">
        <label>Kapasite</label>
            <input type="text" asp-for="Capacity" class="form-control" />
    </div>
    <div class="form-group">
        <label>Kapak Görseli</label>
            <input type="text" asp-for="CoverImage" class="form-control" />
    </div>
    <div class="form-group">
        <label>2.Görsel</label>
            <input type="text" asp-for="Image2" class="form-control" />
    </div>

    <div class="form-group">
        <label>Detay 1</label>
            <input type="text" asp-for="Details1" class="form-control" />
    </div>
    <div class="form-group">
        <label>Detay 2</label>
            <input type="text" asp-for="Details2" class="form-control" />
    </div>
    
    <div class="form-group">
        <br />
            <button class="btn btn-outline-success">Ekle</button>
    </div>

</form>
</div>
