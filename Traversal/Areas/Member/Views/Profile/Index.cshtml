@model Traversal.Areas.Member.Models.UserEditViewModel
@{
    ViewData["Title"] = "Profil Düzenleme";
    Layout = "~/Views/Shared/_MemberNewLayout.cshtml";
}
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title">Profil Bilgilerini Güncelle</h4>
                <h4>@ViewBag.Id</h4>
                <a class="heading-elements-toggle"><i class="la la-ellipsis-v font-medium-3"></i></a>
                <div class="heading-elements">
                    <ul class="list-inline mb-0">
                        <li><a data-action="collapse"><i class="ft-minus"></i></a></li>
                        <li><a data-action="reload"><i class="ft-rotate-cw"></i></a></li>
                        <li><a data-action="expand"><i class="ft-maximize"></i></a></li>
                        <li><a data-action="close"><i class="ft-x"></i></a></li>
                    </ul>
                </div>
            </div>
            <div class="card-content collapse show">
                <div class="card-body">
                    <p class="card-text">Bilgilerinizi Bu Bölümden Güncelleyebilirsiniz</p>

                    <div class="table-responsive">
                        <form method="post" enctype="multipart/form-data">
                            <div class="form-group">
                                <label>Adınız</label>
                                <input type="text" asp-for="Name" class="form-control" />
                            </div>
                            <div class="form-group">
                                <label>Soyadınız</label>
                                <input type="text" asp-for="Surname" class="form-control" />
                            </div>
                            <div class="form-group">
                                <label>Telefon Numarası</label>
                                <input type="text" asp-for="PhoneNumber" class="form-control" />
                            </div>
                            <div class="form-group">
                                <label>E-Posta Adresiniz</label>
                                <input type="text" asp-for="Email" class="form-control" />
                            </div>
                            <div class="form-group">
                                <label>Şifreniz</label>
                                <input type="password" asp-for="Password" class="form-control" />
                            </div>
                            <div class="form-group">
                                <label>Şifre Tekrarı</label>
                                <input type="password" asp-for="ConfirmPassword" class="form-control" />
                            </div>
                            <div class="form-group">
                                <label>Resim Seçiniz</label>
                                <br />
                                <input type="file" asp-for="Image" />
                            </div>
                            <button class="btn btn-outline-success"> Güncelle</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



