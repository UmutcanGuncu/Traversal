@{
    ViewData["Title"] = "Home Page";
}

@section Scripts{
    <script src="/lib/microsoft/signalr/dist/browser/min.js"> </script>
    
    <script type="text/javascript">
    $(document).ready(() => {
            var connection = new signalR.HubConnectionBuilder().withUrl("http://localhost:49092/VisitorHub").build();
            
            $("#connectionStatus").text(connection.connectionState);

            connection.start().then(()=> {
                $("#connectionStatus").text(connection.connectionState);
            }).catch((err) => {console.log(err)});
            
    })    
    </script>
}
<div class="container">
    <div class="alert alert-warning">
        Bağlantı Durumu :<p id="#connectionStatus"></p>
    </div>
</div>

